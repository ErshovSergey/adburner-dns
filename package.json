{
  "name": "adburner-dns",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "bluebird": "^3.5.2",
    "dns-packet": "^5.0.0",
    "dotenv": "^6.0.0",
    "download": "^7.1.0",
    "forever": "^0.15.3",
    "fs-extra": "^7.0.0",
    "micromatch": "^3.1.10"
  },
  "scripts": {
    "build": "npm run clean-lib && npm run compile-src",
    "start": "forever lib/index.js",
    "start-dev": " npm run build && sudo node lib/index.js",
    "compile-src": "babel src --out-dir lib",
    "clean-lib": "rm -r ./lib || true",
    "docker-build": "docker build -t adburner-dns:latest .",
    "docker-publish": "docker tag adburner-dns:latest subash/adburner-dns && docker push subash/adburner-dns",
    "docker-build-publish": "npm run docker-build && npm run docker-publish"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs",
      "babel-plugin-syntax-object-rest-spread",
      "babel-plugin-transform-object-rest-spread"
    ]
  }
}
